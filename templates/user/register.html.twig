{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    <div class="container pt-5">
        <div class="card text-white bg-dark mt-5 mx-auto mw-500" style=" z-index: 1055;">
            <div class="modal-header pb-0">
                <h5 class="modal-title" id="createModalLabel">Anmelden</h5>
                <a class="close" onclick="window.history.go(-2); return false;"><i class="fa-solid fa-xmark"></i></a>
            </div>
            <div class="card-body">
                {% for flashError in app.flashes('verify_email_error') %}
                    <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                {% endfor %}
                {{ form_start(registrationForm, {'attr': {'id': 'register'}}) }}
                {{ form_row(registrationForm.email, {'attr': {'class': 'form-control mb-3'}, label:"E-Mail Adresse", value:email}) }}
                {{ form_row(registrationForm.plainPassword, {'attr': {'class': 'form-control'}, label:"Passwort"}) }}
                {{ form_end(registrationForm) }}
            </div>
            <button type="submit" class="btn btn-outline-light m-3 mt-0" form="register" id="register-button">Registrieren</button>
        </div>
    </div>

    <div class="modal-backdrop fade show"></div>

{% endblock %}
